@using PetStoreAPI.Data
@using Microsoft.EntityFrameworkCore
@using PetStoreAPI.Entities
@inject PetStoreDbContext DbContext

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pet Store</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    @{
        var user = DbContext.Users.FirstOrDefault(u => u.Id == 1);
        var userName = user?.Username;
        var categories = DbContext.Categories.ToList(); 
    }

    <header class="header">
        <div class="header-title">Pet Store</div>
    </header>

    <nav class="navbar">
        <div class="nav-left">
            <div class="welcome-message">Welcome, <strong>@userName</strong>, to the store!</div>
        </div>
        <div class="nav-center">
            <ul class="nav">
                @foreach (var category in categories)
                {
                    <li class="nav-item">
                        <a class="nav-link @(category.Name == ViewBag.SelectedCategory ? "active" : "")" href="/Home/Index?categoryName=@category.Name">@category.Name</a>
                    </li>
                }
            </ul>
        </div>
        <div class="nav-right">
            <a href="/Account/Register">Register</a>
            <a href="/Help">Help</a>
            <a href="/Cart">
                <img src="@Url.Content("~/images/cart-icon.png")" alt="Cart" class="cart-icon" />
            </a>
        </div>
    </nav>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer>
        <p>&copy; 2024 - Pet Store</p>
    </footer>
</body>

</html>