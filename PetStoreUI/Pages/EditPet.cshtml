@model UpdatedPetStoreDTO
@inject HttpClient Http

<h2>Edit Pet</h2>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="text" asp-for="ProductId" placeholder="Product ID" required />
    <input type="text" asp-for="PetDescription" placeholder="Description" required />
    <input type="number" asp-for="Price" placeholder="Price" required />
    <button type="submit">Save</button>
</form>
