@page
@using PetStoreUI.Pages.Cart
@model PetStoreUI.Pages.Cart.CartModel
@{
    ViewData["Title"] = "Cart";
}

<!-- Ensure the CSS file is linked -->
<link rel="stylesheet" href="~/css/cart.css" />

<div class="cart-container">
    <div class="cart-card">
        <div class="cart-header">
            <h2>Shopping Cart</h2>
            <p>This is your shopping cart.</p>
        </div>
        <div class="cart-body">
            @if (Model.CartItems.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Pet Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>@item.PetName</td>
                                <td>
                                    <button class="btn btn-secondary">-</button>
                                    @item.Quantity
                                    <button class="btn btn-secondary">+</button>
                                </td>
                                <td>@item.Price</td>
                                <td>@(item.Price * item.Quantity)</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button class="btn btn-primary">Proceed to Checkout</button>
            }
            else
            {
                <p>Your cart is empty.</p>
            }
        </div>
    </div>
</div>