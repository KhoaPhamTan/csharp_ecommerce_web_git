@page
@using PetStoreUI.Pages.Account
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<!-- Ensure the CSS file is linked -->
<link rel="stylesheet" href="~/css/site.css" />

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>Login</h1>
        </div>
        <div class="login-body">
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
            }

            <form method="post" class="login-form">
                @Html.AntiForgeryToken()
                <div class="form-group d-flex align-items-center"> <!-- Center the form group -->
                    <label asp-for="Input.Email" class="form-label me-2">Email:</label>
                    <input asp-for="Input.Email" class="form-control" name="Input.Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group d-flex align-items-center"> <!-- Center the form group -->
                    <label asp-for="Input.Password" class="form-label me-2">Password:</label>
                    <input asp-for="Input.Password" type="password" class="form-control" name="Input.Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Login</button> <!-- Center the button -->
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
